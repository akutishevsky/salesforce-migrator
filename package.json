{
    "name": "salesforce-migrator",
    "displayName": "Salesforce Migrator",
    "description": "VS Code Extension for migrating Salesforce metadata and records between orgs.",
    "version": "0.0.1",
    "engines": {
        "vscode": "^1.98.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [],
    "main": "./out/extension.js",
    "contributes": {
        "viewsContainers": {
            "activitybar": [
                {
                    "id": "salesforce-migrator",
                    "title": "Salesforce Migrator",
                    "icon": "src/common/resources/icon.png"
                }
            ]
        },
        "views": {
            "salesforce-migrator": [
                {
                    "id": "salesforce-migrator.source-org-selector",
                    "name": "Source Org",
                    "icon": "src/common/resources/icon.png",
                    "type": "webview"
                },
                {
                    "id": "salesforce-migrator.target-org-selector",
                    "name": "Target Org",
                    "icon": "src/common/resources/icon.png",
                    "type": "webview"
                },
                {
                    "id": "salesforce-migrator.metadata-selector",
                    "name": "Metadata",
                    "icon": "src/common/resources/icon.png",
                    "type": "webview"
                },
                {
                    "id": "salesforce-migrator.records-selector",
                    "name": "Records",
                    "icon": "src/common/resources/icon.png",
                    "type": "webview"
                }
            ]
        },
        "commands": [
            {
                "command": "salesforce-migrator.refreshSourceOrgs",
                "title": "Refresh Source Orgs",
                "icon": "$(refresh)"
            },
            {
                "command": "salesforce-migrator.refreshTargetOrgs",
                "title": "Refresh Target Orgs",
                "icon": "$(refresh)"
            },
            {
                "command": "salesforce-migrator.refreshMetadata",
                "title": "Refresh Metadata",
                "icon": "$(refresh)"
            }
        ],
        "menus": {
            "view/title": [
                {
                    "command": "salesforce-migrator.refreshSourceOrgs",
                    "when": "view == salesforce-migrator.source-org-selector",
                    "group": "navigation"
                },
                {
                    "command": "salesforce-migrator.refreshTargetOrgs",
                    "when": "view == salesforce-migrator.target-org-selector",
                    "group": "navigation"
                },
                {
                    "command": "salesforce-migrator.refreshMetadata",
                    "when": "view == salesforce-migrator.metadata-selector",
                    "group": "navigation"
                }
            ]
        }
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "pretest": "npm run compile && npm run lint",
        "lint": "eslint src",
        "test": "vscode-test"
    },
    "devDependencies": {
        "@types/mocha": "^10.0.10",
        "@types/node": "20.x",
        "@types/vscode": "^1.98.0",
        "@typescript-eslint/eslint-plugin": "^8.28.0",
        "@typescript-eslint/parser": "^8.28.0",
        "@vscode/test-cli": "^0.0.10",
        "@vscode/test-electron": "^2.4.1",
        "eslint": "^9.23.0",
        "typescript": "^5.8.2"
    }
}
